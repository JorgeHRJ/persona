<div class="top-bar theme-bg-primary-darken">
    <div class="container-fluid">
        <nav class="navbar navbar-expand-lg navbar-dark position-relative">
            <button class="navbar-toggler"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#navigation"
                    aria-controls="navigation"
                    aria-expanded="false"
                    aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse text-uppercase" id="navigation">
                <ul class="navbar-nav ms-lg-auto">
                    {% set menu = get_menu() %}
                    {% for item in menu %}
                        <li class="nav-item {{ item.isActive ? 'active' }} me-lg-3">
                            <a class="nav-link" href="{{ path(item.routeName) }}">{{ item.title }}</a>
                        </li>
                    {% endfor %}
                </ul>
                <span id="slide-line" style="width: 0px; left: 0px;"></span>
            </div>
        </nav>
    </div>
</div>
