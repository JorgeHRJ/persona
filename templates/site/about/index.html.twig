{% extends 'site/layout.html.twig' %}

{% page_setup {
    'title': 'Sobre mí',
} %}

{% set admin_user = get_admin_user() %}
{# twigcs use-var admin_user #}
{% meta {
    'description': "Página personal de #{admin_user.name}",
    'keywords': get_site_keywords(),
    'author': admin_user.name,
    'og': {
        'type': 'article',
        'locale': 'es_ES',
        'site_name': "Página personal de #{admin_user.name}",
        'title': "Página personal de #{admin_user.name}",
        'url': get_canonical(),
        'description': "Página personal de #{admin_user.name}",
        'image': absolute_url(asset(get_image('og_meta', admin_user.profile)))
    },
    'twitter': {
        'card': 'summary_large_image',
        'title': "Página personal de #{admin_user.name}",
        'description': "Página personal de #{admin_user.name}",
        'site': "@#{admin_user.profile.twitter}",
        'creator': "@#{admin_user.profile.twitter}",
        'image': absolute_url(asset(get_image('twitter_card_meta', admin_user.profile)))
    }
} %}

{% block intro %}
    {{ include('site/about/components/profile.html.twig') }}
{% endblock %}

{% block content %}
    {{ include('site/about/components/skills.html.twig') }}
    <hr>
    {{ include('site/about/components/experiences.html.twig') }}
    <hr>
    {{ include('site/about/components/educations.html.twig') }}
    <hr>
    {{ include('site/about/components/certifications.html.twig') }}
    <hr>
    {{ include('site/about/components/projects.html.twig') }}
    <hr>
    {{ include('site/about/components/posts.html.twig') }}
{% endblock %}
