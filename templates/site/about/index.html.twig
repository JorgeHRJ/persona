{% extends 'site/layout.html.twig' %}

{% page_setup {
    'title': 'Sobre mí',
} %}

{% set admin_user = get_admin_user() %}
{% set description = "Página personal de #{admin_user.name}" %}
{% set og_image_meta = get_image('og_meta', admin_user.profile) %}
{% set twitter_card_image_meta = get_image('twitter_card_meta', admin_user.profile) %}
{% meta {
    'description': description,
    'keywords': 'portfolio, personal, blog, desarrollo, software, Symfony, PHP',
    'author': admin_user.name,
    'og': {
        'type': 'article',
        'locale': 'es_ES',
        'site_name': description,
        'title': description,
        'url': get_canonical(),
        'description': description,
        'image': absolute_url(asset(og_image_meta))
    },
    'twitter': {
        'card': 'summary_large_image',
        'title': description,
        'description': description,
        'site': "@#{admin_user.profile.twitter}",
        'creator': "@#{admin_user.profile.twitter}",
        'image': absolute_url(asset(twitter_card_image_meta))
    }
} %}

{% block intro %}
    {{ include('site/about/components/profile.html.twig') }}
{% endblock %}

{% block content %}
    {{ include('site/about/components/experiences.html.twig') }}
    <hr>
    {{ include('site/about/components/educations.html.twig') }}
    <hr>
    {{ include('site/about/components/certifications.html.twig') }}
    <hr>
    {{ include('site/about/components/projects.html.twig') }}
    <hr>
    {{ include('site/about/components/posts.html.twig') }}
{% endblock %}
